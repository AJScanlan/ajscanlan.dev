---
const {
    title = "ajscanlan.dev",
    description = "Thoughts in public",
    ogImage,
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" href="/icons/favicon.svg" />
        <title>{title}</title>
        <meta name="description" content={description} />
        {ogImage && <meta property="og:image" content={ogImage} />}
        <style is:global>
            @import "/src/styles/global.css";
        </style>
    </head>
    <body>
        <a href="#main-content" class="skip-to-content">
            Skip to main content
        </a>
        
        <header class="border-b border-ink-200/60 dark:border-ink-800/60" role="banner">
            <div class="container-wide py-rhythm-6 flex items-center justify-between">
                <a href="/" class="flex items-center gap-rhythm-3 font-semibold text-lg tracking-tight text-fox-500 hover:text-fox-600 transition-colors">
                    <img src="/icons/RED_FOX.svg" alt="Fox" class="w-8 h-8" />
                    <span>ajscanlan.dev</span>
                </a>
                <nav class="text-sm flex gap-rhythm-6" aria-label="Main navigation">
                    <a href="/about/" class="hover:underline">About</a>
                    <a href="/posts/" class="hover:underline">Archive</a>
                    <a href="/feed.xml" class="hover:underline">RSS</a>
                </nav>
            </div>
        </header>

        <main id="main-content" class="container-narrow py-rhythm-12" role="main">
            <slot />
        </main>

        <footer class="mt-rhythm-12 border-t border-ink-200/60 dark:border-ink-800/60" role="contentinfo">
            <div
                class="container-narrow py-rhythm-8 text-sm text-ink-600 dark:text-ink-400"
            >
                <p>
                    Â© {new Date().getFullYear()} A.J. Scanlan. Built with Astro.
                    Minimal on purpose.
                </p>
            </div>
        </footer>
    </body>
</html>
